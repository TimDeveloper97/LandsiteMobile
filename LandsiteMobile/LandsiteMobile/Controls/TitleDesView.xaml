<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LandsiteMobile.Controls.TitleDesView">
    <ContentView.Content>
        <StackLayout BindingContext="{Binding .}">
            <Label x:Name="heading" TextColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource Black}}" 
                   FontAttributes="Bold" 
                   FontSize="{OnPlatform Android=22, iOS=20}"/>
            <Label x:Name="description" TextColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource Black}}" 
                   FontSize="{OnPlatform Android=16, iOS=14}" LineBreakMode="WordWrap" Margin="0,10,0,10"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>